#!/bin/sh

export MIRROR_BOOTSTRAP=localhost:3142
export MIRROR_BINARY=http.debian.net

export KPARAMS="hostname=skeeto username=wellons noeject"
export KFAST="noibrs noibpb nopti nospectre_v2 nospectre_v1 l1tf=off nospec_store_bypass_disable no_stf_barrier mds=off tsx=on tsx_async_abort=off mitigations=off"

lb config noauto \
    --clean \
    --ignore-system-defaults \
    --architectures amd64 \
    --mode debian \
    --distribution buster \
    --archive-areas "main contrib non-free" \
    --bootappend-live "boot=live config $KPARAMS $KFAST" \
    --debian-installer false \
    --debian-installer-gui false \
    --iso-application "Skeeto Live" \
    --iso-publisher "skeeto" \
    --iso-volume "skeeto-"$(date +%Y%m%d) \
    --security true \
    --mirror-bootstrap        http://$MIRROR_BOOTSTRAP/debian/ \
    --mirror-chroot           http://$MIRROR_BOOTSTRAP/debian/ \
    --mirror-chroot-security  http://$MIRROR_BOOTSTRAP/security.debian.org/ \
    --mirror-binary           http://$MIRROR_BINARY/debian/ \
    "${@}"
